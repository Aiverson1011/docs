      <MemberSignature Language="C#" Value="public static System.ServiceModel.Channels.Binding HttpControlEndpointBinding { get; }" />
      <MemberSignature Language="ILAsm" Value=".property class System.ServiceModel.Channels.Binding HttpControlEndpointBinding" />
